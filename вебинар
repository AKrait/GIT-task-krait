// ==UserScript==
// @name         GoogleBot
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  Bot for Google
// @author       Sergey Chizhikov
// @match        https://www.google.com/*
// @match        https://napli.ru/*
// @match        https://kiteuniverse.ru/*
// @match        https://motoreforma.com/*
// @icon         https://www.google.com/s2/favicons?sz=64&domain=google.com
// @grant        none
// ==/UserScript==


let sites = {
  "napli.ru": [
    "Взаимодействие PHP и MySQL",
    "10 самых популярных шрифтов от Google",
    "Отключение редакций и ревизий в WordPress",
    "Плагины VS Сode",
  ],
  "kiteuniverse.ru": ["Шоу воздушных змеев", "Kite Universe", "красота, грация, интеллект"],
  "motoreforma.com": ["мотореформа", "прошивка для CAN-AM", "тюнинг Maverick X3"],
};
let site = Object.keys(sites)[getRandom(0, Object.keys(sites).length)];
let links = document.links;
let btnK = document.getElementsByName("btnK")[0];
let keywords = sites[site];
let keyword = keywords[getRandom(0, keywords.length)]; //
let googleInput = document.getElementsByName("q")[0]; //  поисковая строка

if (btnK !== undefined) { //если кнопка на странице есть
  document.cookie = `site=${site}`;
} else if (location.hostname == "www.google.com") {
  site = getCookie("site");
} else {
  site = location.hostname;
}

if (btnK !== undefined) { //если кнопка на странице есть
  let i = 0; // начинаем считать с нуля

  let timerId = setInterval(() => { //  ( setInterval(function() { ) запускаем порядок действий
    googleInput.value += keyword[i]; // берем поисковую строку и складываем туда рандомное значение переменной по одному символу
    i++; // по одному символу
    if (i == keyword.length) { // если ш достигла длинны выбранной фразы
      clearInterval(timerId); // станавливаем цикл

      setTimeout(()=>{ // позволяет вызвать фунцию 1 раз через какой то промежуток времени (()=>{}) стрелочная функия
        btnK.click(); //клик
      }, getRandom(200, 500)); //интервал вот 200 до 500 милисекунд

    }
  }, 300);

} else if (location.hostname == site) { //если в параметрах элемента имя совпадает с 
  console.log("Мы на целевом сайте!"); 

  setInterval(() => { // Отвечает за вызов функции через некоторые промежутки времени
    let index = getRandom(0, links.length);

    if (getRandom(0, 101) > 70) {
      location.href = "https://www.google.com/";
    } else if (links[index].href.indexOf(site) !== -1) { //есть ссылка кликаем - нет ссылки щем дальше
      links[index].click();
    }
  }, getRandom(3000, 5000));

} else {
  let nextGooglePage = true; // ориентир. пока true
  for (let i = 0; i < links.length; i++) { // запускаем цикл 
    if (links[i].href.includes(site)) { // поиска элементов массива в списке ссылок
      console.log("Нашел строку " + links[i]);
      let link = links[i]; 
      nextGooglePage = false; // нашел строку, переключается на выкл
      setTimeout(() => { //запускается клик мышкой нассылку в пределах временного интервала
        link.click(); 
      }, getRandom(2000, 4000));
      break; //стоп
    }
  }
  let elementExist = setInterval(() => { 
    let elm = document.querySelector(".YyVfkd"); // активная станица 
    if (elm!=null) { 

      if (elm.innerText == "4") { // если ей присвоен а цифра 4 
        nextGooglePage = false; // то ориентир выключается 
        location.href = "https://www.google.com/"; // и мы переходим на начальную страницу 
      }

      clearInterval(elementExist);
    }
  }, 100);


  if (nextGooglePage) { // если переменная все еще вкл, то переключаемся на др страницу
    setTimeout(() => {
      pnnext.click(); //кликаем по id кнопки перехода на следущую страницу
    }, getRandom(3000, 5000));// во временном интервале 
  }
}
function getRandom(min, max) {
  return Math.floor(Math.random() * (max - min) + min);
}
function getCookie(name) {
  let matches = document.cookie.match(
    new RegExp("(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, "\\$1") + "=([^;]*)")
  );
  return matches ? decodeURIComponent(matches[1]) : undefined;
}


